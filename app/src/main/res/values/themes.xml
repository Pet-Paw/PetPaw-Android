<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PetPaw" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <!--        <item name="colorSurface">@color/surface</item>-->
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
    </style>

    <style name="Theme.PetPaw" parent="Base.Theme.PetPaw" />

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant</item>
    </style>

    <style name="Widget.App.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/secondary_container</item>
    </style>

    <style name="Circular">
        <item name="cornerSize">50%</item>
        <item name="borderRound">2dp</item>
        <item name="color">@color/black</item>
    </style>

    <style name="CardViewStyle">
        <item name="cardViewStyle">@style/CardView</item>
        <item name="cardForegroundColor">@color/red</item>
        <item name="cardBackgroundColor">@color/black</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardMaxElevation">5dp</item>
    </style>

</resources>